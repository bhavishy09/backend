<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
   <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form p-10 text-white">
        <form action="/create" method="post" name="body">
            <input class="block w-full rounded-lg px-6 py-3 bg-zinc-800" type="text" placeholder="task" name="title">
            <textarea class="block w-full rounded-lg px-6 py-3 resize-none bg-zinc-800" placeholder="write your task" name="details"></textarea>
            <input class="mt-2 bg-blue-600 px-5 py-5" type="submit" value="create tasks">
        </form>


        <div class="tasks  flex gap-3 flex-wrap p-10">
            <% if(files.length>0) { %>
            <% files.forEach(function(val){ %>
                <div class="tasks w-72  px-3 py-4 rounded-xl bg-zinc-800 flex gap-3 flex-wrap p-10">
                    <h1 class="text-white text-3xl tracking-tighter"><%= val %> </h1>

                    <a href="/files/<%= val %>" class="text-blue-500">/a>
        
                 
                </div>
            <% }) %>

           <% } else{ %>
            <h1 class="text-zinc-800">no task yet </h1>

            <% } %>
          
          
            </div>

          



        </div>
    </div>
 
    
</body>
</html>